


<h2>New book</h2>
<!-- <form class="mt-20"> -->
<%= form_for(book, url: '/books') do |f| %>
  <% if book.errors.any? %>
       <h3><%= book.errors.count %>error!</h3>
       <ul>
         <% book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
  <% end %>

  <br>

      <div class="form-group has-icon">
        <label class="control-label sr-only">Title</label>
        <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>

      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"body" %>
  </div>
  <hr>
  <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
<!-- </form> -->

</div>