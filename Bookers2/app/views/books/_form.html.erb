<h2>New book</h2>

<%= form_for(book, url: '/books') do |f| %>
  <% if book.errors.any? %>
      <div class="alert alert-warning">
       <h3><%= book.errors.count %>error!</h3>
       <ul>
         <% book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
     </div>
  <% end %>

  <br>

      <label for="control-label sr-only">Title</label>
      <div class="form-group has-icon">
        <%= f.text_field :title, class:"form-control" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>

      <label for="control-label sr-only">Opinion</label>
      <div class="form-group has-icon">
        <%= f.text_area :body, class:"form-control", rows:"3" %>
      </div>

  <hr>
  <%= f.submit "Create Book", class:"btn btn-primary btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>