<div class="row">

<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>


  <div class="col-xs-3">
    <%= render 'users/user', user: @book.user %>
  </div>

<div class="col-xs-8">
<h2>Book detail</h2>

<table class="table">
	<tr>
		<td>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<%= @book.user.name %></td>

<td><%= @book.title %></td>

<td><%= @book.body %></td>

<td>
<% if @book.user == current_user %>
 <%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_32483" %>
<% end %>
</td>
<td>
<% if @book.user == current_user %>
 <%= link_to "Destroy", book_path(@book), method: :delete,  class:"btn-sm btn-danger destroy_book_32483", data: {confirm: "削除しますか？"}  %>
<% end %>
</td>


  </tr>
</table>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to 'Back', books_path %>
</div>

</div>

 <div class="col-xs-3">
   <%= render 'books/form', book: @book_new %>
 </div>