<div class="row">

<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>

 <div class="col-xs-3">
   <%= render 'users/user', user: @book.user %>
 </div>

  <div class="col-xs-9">
  <h2>Book detail</h2>

    <table class="table">
	    <tr>
		    <td>
          <%= link_to user_path(@book.user.id) do %>         <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <%= @book.user.name %>
          <% end %>
        </td>

        <td><%= link_to @book.title, book_path(@book) %></td>

        <td><%= @book.body %></td>

        <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_32483" %>
            </td>

            <td>
          <%= link_to "Destroy", book_path(@book), method: :delete,  class:"btn-sm btn-danger destroy_book_32483", data: {confirm: "削除しますか？"}  %>

          <% else %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

 <div class="col-xs-3">
   <%= render 'books/form', book: @book_new %>
 </div>