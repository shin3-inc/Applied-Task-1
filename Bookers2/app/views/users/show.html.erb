<body>

<h1>Books</h1>


<div class="profile-container">
  <h3 class="profile-name"><%= @user.username %></h3>
  <%= image_tag('', class: "img-circle pull-left profile-thumb", style: "width: 100px; height: 100px; margin-top: 20px;") %>
</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.username %></td>
        <td><%= link_to book_path(book.id) do %>
          <%=book.title %> <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>