<body>


<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>

<div class="row">
  <div class="col-xs-3">
    <%= render 'users/user', user: @user %>
  </div>

<div class="col-xs-9 ">
<h2>Books</h2>

<% if @user.id == current_user.id %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.name %></td>
        <td><%= link_to book_path(book.id) do %>
          <%=book.title %> <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %>
        </td>
        <td><%= link_to book_path(book.id) do %>
          <%=book.title %> <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% end %>
</div>
</div>

  <div class="col-xs-3">
    <%= render 'books/form', book: @book %>
  </div>

</body>