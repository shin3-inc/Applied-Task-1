<body>

<div class="row">

<div class="col-xs-4">
<%= render 'users/user', user: @user %>
</div>

<div class="col-xs-4">
  <%= render 'books/form', book: @book %>
</div>

<div class="col-xs-8">
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.name %></td>
        <td><%= link_to book_path(book.id) do %>
          <%=book.title %> <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</body>