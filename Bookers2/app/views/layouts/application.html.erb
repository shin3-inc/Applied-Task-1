<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="page-header">
   <div class="container">
      <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
          <span class="sr-only">Toggle navigation</span>
          <span class="glyphicon glyphicon-star" ></span>
          <span class="glyphicon glyphicon-star" ></span>
          <span class="glyphicon glyphicon-star" ></span>
        </button>

      <a class="navbar-brand" href="#">Bookers</a>
      </div>

      <div class="collapse navbar-collapse" id="navbarEexample1">
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>


          <li><span class="glyphicon glyphicon-home" aria-hidden="true" ></span>
            <%= link_to "Home", user_path(current_user.id) %>
          </li>

          <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= link_to 'Users', user_path(current_user.id) %>
          </li>

          <li><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
            <%= link_to "Books", books_path %>
          </li>

          <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
          </li>


        <% else %>


          <li><span class="glyphicon glyphicon-home" aria-hidden="true" ></span>
            <%= link_to "Home", books_path %>
          </li>

          <li><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            <%= link_to "About", books_path %>
          </li>

          <li><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
            <%= link_to "login", new_user_session_path %>
          </li>


        <% end %>
       </ul>
      </div>
  </nav>
  </div>
  </div>
<div class="container">
    <%= yield %>


    </div>
    
  </body>
</html>
