  <!-- form_for部分 -->
  <%= form_for(@book, url: "/books/#{@book.id}") do |f| %>

   <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
   </div>

   <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
   </div>

   <div class="actions">
    <%= f.submit 'Update Book' %>
   </div>
  <% end %>